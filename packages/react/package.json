{
  "name": "@composify/react",
  "version": "0.0.1",
  "homepage": "https://composify.js.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/composify-js/composify.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./editor": {
      "import": {
        "types": "./dist/editor/index.d.mts",
        "default": "./dist/editor/index.mjs"
      },
      "require": {
        "types": "./dist/editor/index.d.ts",
        "default": "./dist/editor/index.js"
      }
    },
    "./preset": {
      "import": {
        "types": "./dist/preset/index.d.mts",
        "default": "./dist/preset/index.mjs"
      },
      "require": {
        "types": "./dist/preset/index.d.ts",
        "default": "./dist/preset/index.js"
      }
    },
    "./renderer": {
      "import": {
        "types": "./dist/renderer/index.d.mts",
        "default": "./dist/renderer/index.mjs"
      },
      "require": {
        "types": "./dist/renderer/index.d.ts",
        "default": "./dist/renderer/index.js"
      }
    },
    "./style.css": "./dist/index.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint **/*.ts{,x} --fix",
    "typecheck": "tsc --noEmit",
    "storybook": "ladle serve",
    "test": "jest"
  },
  "dependencies": {
    "@monaco-editor/react": "4.7.0",
    "css-box-model": "1.2.1",
    "es-toolkit": "1.39.8",
    "prettier": "3.6.2",
    "react-dnd": "16.0.1",
    "react-dnd-html5-backend": "16.0.1",
    "react-element-to-jsx-string": "17.0.1"
  },
  "devDependencies": {
    "@composify/core": "workspace:*",
    "@composify/utils": "workspace:*",
    "@ladle/react": "5.0.3",
    "@testing-library/react": "16.3.0",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "peerDependencies": {
    "@composify/core": "*",
    "react": "*",
    "react-dom": "*"
  }
}
