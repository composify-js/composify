  "devDependencies": {
    "@composify/core": "workspace:*",
    "@ladle/react": "5.0.1",
    "@testing-library/react": "16.2.0",
    "@types/react": "19.0.7",
    "@types/react-dom": "19.0.4",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "peerDependencies": {
    "@composify/core": "workspace:*",
    "react": "*",
    "react-dom": "*"
